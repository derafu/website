{% extends 'layouts/default.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block content %}

<twig:block-hero
    size="mini"
    background="/img/home/derafu-hero.png"
    title="Contact Us"
    subtitle="We're here to help you. Please fill out the form below and we'll get back to you as soon as possible."
/>

<div class="my-5 container">
    {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary w-100 disabled">Send Message</button>
    {{ form_end(form) }}
</div>

{% endblock %}
